<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.soapdiy.mapper.OrderDetailMapper">
	<select id="fineOrderDetailById" parameterType="Integer" resultMap="fineOrderDetailByIdResult">
		select * from orderdetails where od_id=#{value}
	</select>
	<select id="fineOrderDetailByOrderId" parameterType="Integer" resultMap="fineOrderDetailByOrderIdResult">
		select * from orderdetails where o_id=#{value}
	</select>
	
	<insert id="addOrderDetail" parameterType="orderDetail">
		insert into orderdetails(o_id,count,g_id,state) 
		value(#{order.o_id},#{count},#{good.g_id},#{state})
	</insert>
	
	<resultMap type="orderDetail" id="fineOrderDetailByOrderIdResult">
		<id property="od_id" column="od_id"/>
		<result property="count" column="count"/>
		<result property="state" column="state"/>
		<result property="o_id" column="o_id"/>
		<association property="good" javaType="good"
		select="com.soapdiy.mapper.GoodMapper.fineGoodById" column="g_id"/>
	</resultMap>
	<resultMap type="orderDetail" id="fineOrderDetailByIdResult">
		<id property="od_id" column="od_id"/>
		<result property="count" column="count"/>
		<result property="state" column="state"/>
		<result property="o_id" column="o_id"/>
		<association property="good" javaType="good"
		select="com.soapdiy.mapper.GoodMapper.fineGoodById" column="g_id"/>
	</resultMap>
</mapper>
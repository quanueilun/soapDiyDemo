<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.soapdiy.mapper.ShoppingcarMapper">
	<select id="fineShoppingcarById" parameterType="Integer" resultMap="fineShoppingcarByIdResult">
		select * from shoppingcar where sh_id=#{value}
	</select>
	<select id="fineShoppingcarByCustomer" parameterType="Integer" resultMap="fineShoppingcarByCustomerResult">
		select * from shoppingcar where c_id=#{value}
	</select>
	
	<insert id="addShoppingcar" parameterType="shoppingcar">
		insert into shoppingcar(g_id,count,c_id) value(#{good.g_id},#{count},#{c_id})
	</insert>
	
	<update id="updateShoppingcar" parameterType="shoppingcar">
		update shoppingcar set g_id=#{good.g_id},count=#{count},c_id=#{c_id} where sh_id=#{sh_id}
	</update>
	
	<delete id="deleteShoppingcar" parameterType="Integer">
		delete from shoppingcar where sh_id=#{value}	
	</delete>
	<resultMap type="shoppingcar" id="fineShoppingcarByIdResult">
		<id property="sh_id" column="sh_id"/>
		<result property="count" column="count"/>
		<result property="c_id" column="c_id"/>
		<association property="good" javaType="good"
		select="com.soapdiy.mapper.GoodMapper.fineGoodById" column="g_id"/>
	</resultMap>
		<resultMap type="shoppingcar" id="fineShoppingcarByCustomerResult">
		<id property="sh_id" column="sh_id"/>
		<result property="count" column="count"/>
		<result property="c_id" column="c_id"/>
		<association property="good" javaType="good"
		select="com.soapdiy.mapper.GoodMapper.fineGoodById" column="g_id"/>
	</resultMap>
	
</mapper>
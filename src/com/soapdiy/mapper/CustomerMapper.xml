<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.soapdiy.mapper.CustomerMapper">
	<select id="fineCustomerById" parameterType="Integer" resultType="customer">
		select * from customer where c_id=#{value}
	</select>
	<select id="fineCustomerByName" parameterType="String" resultType="customer">
		select * from customer where username=#{username}
	</select>
	<select id="fineCustomerByNameAndPassword" parameterType="customer" resultType="customer">
		select * from customer where username=#{username} and password=#{password}
	</select>
	<select id="fineCustomerByEmailAndPassword" parameterType="customer" resultType="customer">
		select * from customer where email=#{email} and password=#{password}
	</select>
	
	<insert id="addCustomer" parameterType="customer" keyProperty="c_id" useGeneratedKeys="true">
		insert into customer(username,password,telephone,email) value(#{username},#{password},#{telephone},#{email})
	</insert>
	

</mapper>